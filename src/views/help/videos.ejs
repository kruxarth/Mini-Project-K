  <script>
    function playVideo(videoId) {
      const videoTitles = {
        'intro': 'System Introduction',
        'login': 'How to Log In',
        'dashboard': 'Dashboard Overview',
        'create-class': 'Create Your First Class',
        'add-students': 'Adding Students',
        'csv-import': 'CSV Import Tutorial',
        'mark-attendance': 'Mark Attendance in 3 Clicks',
        'period-attendance': 'Period-wise Attendance',
        'edit-attendance': 'Edit & Correct Attendance',
        'generate-reports': 'Generate Reports',
        'parent-notifications': 'Notify Parents',
        'insights': 'Attendance Insights',
        'bulk-operations': 'Bulk Operations',
        'analytics': 'Analytics Dashboard',
        'shortcuts': 'Keyboard Shortcuts'
      };
      
      document.getElementById('videoTitle').textContent = videoTitles[videoId] || 'Video Tutorial';
      
      // Here you would load the actual video
      // For now, we'll show a placeholder
      const modal = new bootstrap.Modal(document.getElementById('videoModal'));
      modal.show();
    }
