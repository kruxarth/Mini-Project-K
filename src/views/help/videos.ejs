      <!-- Reports & Communication Videos -->
      <section class="mb-5">
        <h2 class="h3 mb-4"><i class="fas fa-chart-bar me-2 text-warning"></i>Reports & Communication</h2>
        <div class="row">
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="video-card">
              <div class="video-thumbnail">
                <div class="play-button" onclick="playVideo('generate-reports')">
                  <i class="fas fa-play"></i>
                </div>
                <div class="position-absolute top-0 end-0 m-2">
                  <span class="badge bg-warning">4:15</span>
