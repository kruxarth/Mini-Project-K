            </div>
          </div>
        </div>
      </section>

      <!-- Form Navigation -->
      <section class="mb-5">
        <h2 class="h3 mb-4"><i class="fas fa-edit me-2 text-secondary"></i>Form Navigation</h2>
        
        <div class="shortcut-card">
