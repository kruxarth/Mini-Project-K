<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> - Attendance Management System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    body { background-color: #f8f9fa; }
    .navbar { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .class-card { 
      background: white; 
      border-radius: 15px; 
      padding: 25px; 
      box-shadow: 0 5px 15px rgba(0,0,0,0.08); 
      transition: transform 0.3s; 
      margin-bottom: 20px;
    }
    .class-card:hover { transform: translateY(-5px); }
    .stats-badge { 
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
      color: white; 
      padding: 8px 16px; 
      border-radius: 20px; 
      font-size: 0.9rem;
    }
    .header-section {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 40px 0;
      margin-bottom: 30px;
    }
  </style>
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/dashboard">
        <i class="fas fa-graduation-cap me-2"></i>Attendance MS
      </a>
      <div class="navbar-nav ms-auto">
        <div class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
            <i class="fas fa-user-circle me-1"></i><%= currentUser.name %>
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/profile"><i class="fas fa-user me-2"></i>My Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <form method="post" action="/logout" class="d-inline">
                <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <!-- Header Section -->
  <div class="header-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h1 class="mb-2">
            <i class="fas fa-file-alt me-3"></i>Parent Reports
          </h1>
          <p class="mb-0 opacity-90">Generate and send detailed attendance reports to parents</p>
        </div>
        <div class="col-md-4 text-end">
          <a href="/dashboard" class="btn btn-light">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <% if (flash) { %>
      <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="fas fa-info-circle me-2"></i><%= flash.message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <!-- Classes Grid -->
    <div class="row">
      <% if (classes.length === 0) { %>
        <div class="col-12">
          <div class="class-card text-center">
            <i class="fas fa-chalkboard-teacher fa-4x text-muted mb-4"></i>
            <h4>No Classes Found</h4>
            <p class="text-muted">Create your first class to start generating parent reports</p>
            <a href="/manage/class/new" class="btn btn-primary">
              <i class="fas fa-plus me-2"></i>Create Class
            </a>
          </div>
        </div>
      <% } else { %>
        <% classes.forEach(classItem => { %>
          <div class="col-lg-6 col-xl-4 mb-4">
            <div class="class-card">
              <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                  <h5 class="mb-1">
                    <i class="fas fa-chalkboard me-2 text-primary"></i><%= classItem.name %>
                  </h5>
                  <% if (classItem.section) { %>
                    <small class="text-muted">Section: <%= classItem.section %></small>
                  <% } %>
                </div>
                <span class="stats-badge">
                  <i class="fas fa-users me-1"></i><%= classItem.student_count || 0 %>
                </span>
              </div>

              <!-- Today's Stats -->
              <div class="row mb-3">
                <div class="col-6">
                  <div class="text-center p-2 bg-light rounded">
                    <div class="h5 mb-1 text-success"><%= classItem.today_present || 0 %></div>
                    <small class="text-muted">Present Today</small>
                  </div>
                </div>
                <div class="col-6">
                  <div class="text-center p-2 bg-light rounded">
                    <div class="h5 mb-1 text-primary"><%= classItem.student_count || 0 %></div>
                    <small class="text-muted">Total Students</small>
                  </div>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="d-grid gap-2">
                <a href="/parent-reports/class/<%= classItem.id %>" class="btn btn-primary">
                  <i class="fas fa-eye me-2"></i>View Student Reports
                </a>
                <div class="btn-group" role="group">
                  <a href="/reports/class/<%= classItem.id %>" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-chart-bar me-1"></i>Analytics
                  </a>
                  <a href="/class/<%= classItem.id %>/attendance" class="btn btn-outline-success btn-sm">
                    <i class="fas fa-check me-1"></i>Mark Attendance
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>

    <!-- Quick Stats Summary -->
    <% if (classes.length > 0) { %>
      <div class="row mt-4">
        <div class="col-12">
          <div class="class-card">
            <h5 class="mb-3">
              <i class="fas fa-chart-pie me-2"></i>Quick Summary
            </h5>
            <div class="row text-center">
              <div class="col-md-3">
                <div class="h4 text-primary"><%= classes.length %></div>
                <small class="text-muted">Total Classes</small>
              </div>
              <div class="col-md-3">
                <div class="h4 text-success">
                  <%= classes.reduce((sum, c) => sum + (c.student_count || 0), 0) %>
                </div>
                <small class="text-muted">Total Students</small>
              </div>
              <div class="col-md-3">
                <div class="h4 text-info">
                  <%= classes.reduce((sum, c) => sum + (c.today_present || 0), 0) %>
                </div>
                <small class="text-muted">Present Today</small>
              </div>
              <div class="col-md-3">
                <div class="h4 text-warning">
                  <%= Math.round(classes.reduce((sum, c) => sum + (c.today_present || 0), 0) / Math.max(classes.reduce((sum, c) => sum + (c.student_count || 0), 0), 1) * 100) %>%
                </div>
                <small class="text-muted">Overall Attendance</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>