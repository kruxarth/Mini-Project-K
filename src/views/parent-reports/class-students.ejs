<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> - Attendance Management System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; }
    .navbar { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .student-card { 
      background: white; 
      border-radius: 12px; 
      padding: 20px; 
      box-shadow: 0 3px 10px rgba(0,0,0,0.08); 
      transition: all 0.3s; 
      margin-bottom: 15px;
      cursor: pointer;
    }
    .student-card:hover { 
      transform: translateY(-3px); 
      box-shadow: 0 5px 20px rgba(0,0,0,0.15);
    }
    .header-section {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 30px 0;
      margin-bottom: 30px;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/dashboard">
        <i class="fas fa-graduation-cap me-2"></i>Attendance MS
      </a>
      <div class="navbar-nav ms-auto">
        <div class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
            <i class="fas fa-user-circle me-1"></i><%= currentUser.name %>
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/profile"><i class="fas fa-user me-2"></i>My Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <form method="post" action="/logout" class="d-inline">
                <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <div class="header-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h1 class="mb-2">
            <i class="fas fa-users me-3"></i><%= classInfo.name %>
          </h1>
          <p class="mb-0 opacity-90">Click on any student to view their detailed report</p>
        </div>
        <div class="col-md-4 text-end">
          <a href="/parent-reports" class="btn btn-light">
            <i class="fas fa-arrow-left me-2"></i>Back to Classes
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <% if (students.length === 0) { %>
        <div class="col-12">
          <div class="student-card text-center">
            <i class="fas fa-user-graduate fa-4x text-muted mb-4"></i>
            <h4>No Students Found</h4>
            <p class="text-muted">Add students to this class to generate reports</p>
          </div>
        </div>
      <% } else { %>
        <% students.forEach(student => { %>
          <div class="col-lg-6 col-xl-4 mb-3">
            <div class="student-card" onclick="viewStudentReport(<%= student.id %>)">
              <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                  <h6 class="mb-1 fw-bold">
                    <i class="fas fa-user me-2 text-primary"></i><%= student.name %>
                  </h6>
                  <small class="text-muted">Roll: <%= student.roll_number || 'N/A' %></small>
                </div>
                <span class="badge <%= (student.attendance_percentage || 0) >= 80 ? 'bg-success' : (student.attendance_percentage || 0) >= 60 ? 'bg-warning' : 'bg-danger' %>">
                  <%= Math.round(student.attendance_percentage || 0) %>%
                </span>
              </div>
              
              <div class="row text-center">
                <div class="col-3">
                  <div class="small text-success fw-bold"><%= student.present_days || 0 %></div>
                  <div class="small text-muted">Present</div>
                </div>
                <div class="col-3">
                  <div class="small text-danger fw-bold"><%= student.absent_days || 0 %></div>
                  <div class="small text-muted">Absent</div>
                </div>
                <div class="col-3">
                  <div class="small text-warning fw-bold"><%= student.late_days || 0 %></div>
                  <div class="small text-muted">Late</div>
                </div>
                <div class="col-3">
                  <div class="small text-info fw-bold"><%= student.excused_days || 0 %></div>
                  <div class="small text-muted">Excused</div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function viewStudentReport(studentId) {
      window.location.href = `/parent-reports/student/${studentId}`;
    }
  </script>
</body>
</html>