<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> - Attendance Management System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; }
    .navbar { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .report-card { 
      background: white; 
      border-radius: 15px; 
      padding: 25px; 
      box-shadow: 0 5px 15px rgba(0,0,0,0.08); 
      margin-bottom: 20px;
    }
    .header-section {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 30px 0;
      margin-bottom: 30px;
    }
    .stat-card {
      background: white;
      border-radius: 10px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 3px 10px rgba(0,0,0,0.08);
      margin-bottom: 20px;
    }
    .attendance-record {
      padding: 8px 12px;
      margin: 2px;
      border-radius: 6px;
      font-size: 0.9rem;
    }
    .status-present { background: #d4edda; color: #155724; }
    .status-absent { background: #f8d7da; color: #721c24; }
    .status-late { background: #fff3cd; color: #856404; }
    .status-excused { background: #d1ecf1; color: #0c5460; }
    @media print {
      .no-print { display: none !important; }
      body { background: white !important; }
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark no-print">
    <div class="container-fluid">
      <a class="navbar-brand" href="/dashboard">
        <i class="fas fa-graduation-cap me-2"></i>Attendance MS
      </a>
      <div class="navbar-nav ms-auto">
        <div class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
            <i class="fas fa-user-circle me-1"></i><%= currentUser.name %>
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/profile"><i class="fas fa-user me-2"></i>My Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <form method="post" action="/logout" class="d-inline">
                <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <div class="header-section no-print">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h1 class="mb-2">
            <i class="fas fa-file-alt me-3"></i><%= student.name %>
          </h1>
          <p class="mb-0 opacity-90">Attendance Report - <%= student.class_name %></p>
        </div>
        <div class="col-md-6 text-end">
          <button onclick="downloadReport()" class="btn btn-success me-2">
            <i class="fas fa-download me-2"></i>Download PDF
          </button>
          <button onclick="sendToParents()" class="btn btn-warning me-2">
            <i class="fas fa-paper-plane me-2"></i>Send to Parents
          </button>
          <a href="/parent-reports/class/<%= student.class_id %>" class="btn btn-light">
            <i class="fas fa-arrow-left me-2"></i>Back to Class
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <!-- Student Info Header -->
    <div class="report-card">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h3 class="mb-1"><%= student.name %></h3>
          <p class="text-muted mb-2">
            <i class="fas fa-chalkboard me-2"></i><%= student.class_name %>
            <% if (student.section) { %> - Section <%= student.section %><% } %>
          </p>
          <p class="text-muted mb-0">
            <i class="fas fa-id-card me-2"></i>Roll Number: <%= student.roll_number || 'Not assigned' %>
          </p>
        </div>
        <div class="col-md-4 text-end">
          <div class="badge bg-primary fs-6 p-3">
            <i class="fas fa-calendar me-2"></i>
            Report Generated: <%= new Date().toLocaleDateString() %>
          </div>
        </div>
      </div>
    </div>

    <!-- Summary Stats -->
    <div class="row">
      <div class="col-md-3">
        <div class="stat-card">
          <div class="h2 text-primary mb-2"><%= summary.total_days %></div>
          <div class="text-muted">Total Days</div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card">
          <div class="h2 text-success mb-2"><%= summary.present_days %></div>
          <div class="text-muted">Present Days</div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card">
          <div class="h2 text-danger mb-2"><%= summary.absent_days %></div>
          <div class="text-muted">Absent Days</div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card">
          <div class="h2 <%= summary.attendance_percentage >= 80 ? 'text-success' : summary.attendance_percentage >= 60 ? 'text-warning' : 'text-danger' %> mb-2">
            <%= Math.round(summary.attendance_percentage || 0) %>%
          </div>
          <div class="text-muted">Attendance Rate</div>
        </div>
      </div>
    </div>

    <!-- Detailed Breakdown -->
    <div class="row">
      <div class="col-md-6">
        <div class="report-card">
          <h5 class="mb-3">
            <i class="fas fa-chart-pie me-2"></i>Attendance Breakdown
          </h5>
          <div class="row">
            <div class="col-6 mb-3">
              <div class="d-flex align-items-center">
                <div class="bg-success rounded-circle me-3" style="width: 12px; height: 12px;"></div>
                <div>
                  <div class="fw-bold"><%= summary.present_days %></div>
                  <small class="text-muted">Present</small>
                </div>
              </div>
            </div>
            <div class="col-6 mb-3">
              <div class="d-flex align-items-center">
                <div class="bg-danger rounded-circle me-3" style="width: 12px; height: 12px;"></div>
                <div>
                  <div class="fw-bold"><%= summary.absent_days %></div>
                  <small class="text-muted">Absent</small>
                </div>
              </div>
            </div>
            <div class="col-6">
              <div class="d-flex align-items-center">
                <div class="bg-warning rounded-circle me-3" style="width: 12px; height: 12px;"></div>
                <div>
                  <div class="fw-bold"><%= summary.late_days %></div>
                  <small class="text-muted">Late</small>
                </div>
              </div>
            </div>
            <div class="col-6">
              <div class="d-flex align-items-center">
                <div class="bg-info rounded-circle me-3" style="width: 12px; height: 12px;"></div>
                <div>
                  <div class="fw-bold"><%= summary.excused_days %></div>
                  <small class="text-muted">Excused</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="report-card">
          <h5 class="mb-3">
            <i class="fas fa-chart-line me-2"></i>Monthly Trend
          </h5>
          <% if (monthlyData.length > 0) { %>
            <% monthlyData.forEach(month => { %>
              <div class="d-flex justify-content-between align-items-center mb-2">
                <div>
                  <div class="fw-bold"><%= new Date(month.month + '-01').toLocaleDateString('en-US', { year: 'numeric', month: 'long' }) %></div>
                  <small class="text-muted"><%= month.present_days %>/<%= month.total_days %> days</small>
                </div>
                <div class="text-end">
                  <span class="badge <%= month.percentage >= 80 ? 'bg-success' : month.percentage >= 60 ? 'bg-warning' : 'bg-danger' %>">
                    <%= Math.round(month.percentage || 0) %>%
                  </span>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-muted">No monthly data available</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Recent Attendance Records -->
    <div class="report-card">
      <h5 class="mb-3">
        <i class="fas fa-history me-2"></i>Recent Attendance (Last 30 days)
      </h5>
      <% if (attendanceRecords.length > 0) { %>
        <div class="row">
          <% attendanceRecords.forEach(record => { %>
            <div class="col-md-4 col-lg-3 mb-2">
              <div class="attendance-record status-<%= record.status %>">
                <div class="fw-bold"><%= new Date(record.date).toLocaleDateString() %></div>
                <div class="small text-capitalize"><%= record.status %></div>
                <% if (record.remarks) { %>
                  <div class="small"><%= record.remarks %></div>
                <% } %>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-muted">No attendance records found</p>
      <% } %>
    </div>

    <!-- Parent Contact Info -->
    <% if (student.parent_email || student.parent_phone) { %>
      <div class="report-card">
        <h5 class="mb-3">
          <i class="fas fa-users me-2"></i>Parent Contact Information
        </h5>
        <div class="row">
          <% if (student.parent_email) { %>
            <div class="col-md-6">
              <div class="d-flex align-items-center">
                <i class="fas fa-envelope text-primary me-3"></i>
                <div>
                  <div class="fw-bold">Email</div>
                  <div class="text-muted"><%= student.parent_email %></div>
                </div>
              </div>
            </div>
          <% } %>
          <% if (student.parent_phone) { %>
            <div class="col-md-6">
              <div class="d-flex align-items-center">
                <i class="fas fa-phone text-success me-3"></i>
                <div>
                  <div class="fw-bold">Phone</div>
                  <div class="text-muted"><%= student.parent_phone %></div>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function downloadReport() {
      // For now, we'll use the browser's print functionality
      window.print();
    }

    function sendToParents() {
      if (confirm('Send this report to the student\'s parents?')) {
        fetch(`/parent-reports/student/<%= student.id %>/send`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            alert('Report sent successfully to parents!');
          } else {
            alert('Error sending report: ' + (data.message || 'Unknown error'));
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error sending report to parents');
        });
      }
    }
  </script>
</body>
</html>