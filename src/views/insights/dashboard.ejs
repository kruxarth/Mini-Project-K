<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> - Attendance Management System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; }
    .navbar { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .insight-card { 
      background: white; 
      border-radius: 15px; 
      padding: 25px; 
      box-shadow: 0 5px 15px rgba(0,0,0,0.08); 
      margin-bottom: 20px;
      transition: transform 0.3s;
    }
    .insight-card:hover { transform: translateY(-3px); }
    .header-section {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 30px 0;
      margin-bottom: 30px;
    }
    .metric-card {
      background: white;
      border-radius: 10px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 3px 10px rgba(0,0,0,0.08);
      margin-bottom: 20px;
    }
    .metric-number {
      font-size: 2.5rem;
      font-weight: bold;
      margin-bottom: 5px;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/dashboard">
        <i class="fas fa-graduation-cap me-2"></i>Attendance MS
      </a>
      <div class="navbar-nav ms-auto">
        <div class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
            <i class="fas fa-user-circle me-1"></i><%= currentUser.name %>
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/profile"><i class="fas fa-user me-2"></i>My Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <form method="post" action="/logout" class="d-inline">
                <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <div class="header-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h1 class="mb-2">
            <i class="fas fa-chart-line me-3"></i>Insights & Analytics
          </h1>
          <p class="mb-0 opacity-90">Comprehensive attendance analytics and insights</p>
        </div>
        <div class="col-md-4 text-end">
          <a href="/dashboard" class="btn btn-light">
            <i class="fas fa-arrow-left me-2"></i>Dashboard
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <!-- Overall Metrics -->
    <div class="row mb-4">
      <div class="col-md-3">
        <div class="metric-card">
          <div class="metric-number text-primary"><%= classes.length %></div>
          <div class="text-muted">Total Classes</div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="metric-card">
          <div class="metric-number text-success">
            <%= classes.reduce((sum, c) => sum + (c.total_students || 0), 0) %>
          </div>
          <div class="text-muted">Total Students</div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="metric-card">
          <div class="metric-number text-info">
            <%= classes.reduce((sum, c) => sum + (c.total_days || 0), 0) %>
          </div>
          <div class="text-muted">Total Days</div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="metric-card">
          <div class="metric-number text-warning">
            <%= Math.round(classes.reduce((sum, c) => sum + (c.avg_attendance || 0), 0) / Math.max(classes.length, 1)) %>%
          </div>
          <div class="text-muted">Avg Attendance</div>
        </div>
      </div>
    </div>

    <!-- Class Analytics -->
    <div class="row">
      <% if (classes.length === 0) { %>
        <div class="col-12">
          <div class="insight-card text-center">
            <i class="fas fa-chart-line fa-4x text-muted mb-4"></i>
            <h4>No Analytics Available</h4>
            <p class="text-muted">Create classes and mark attendance to see insights</p>
            <a href="/manage/class/new" class="btn btn-primary">
              <i class="fas fa-plus me-2"></i>Create Class
            </a>
          </div>
        </div>
      <% } else { %>
        <% classes.forEach(classItem => { %>
          <div class="col-lg-6 col-xl-4 mb-4">
            <div class="insight-card">
              <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                  <h5 class="mb-1">
                    <i class="fas fa-chalkboard me-2 text-primary"></i><%= classItem.name %>
                  </h5>
                  <% if (classItem.section) { %>
                    <small class="text-muted">Section <%= classItem.section %></small>
                  <% } %>
                </div>
                <span class="badge <%= (classItem.avg_attendance || 0) >= 80 ? 'bg-success' : (classItem.avg_attendance || 0) >= 60 ? 'bg-warning' : 'bg-danger' %>">
                  <%= Math.round(classItem.avg_attendance || 0) %>%
                </span>
              </div>

              <div class="row text-center mb-3">
                <div class="col-4">
                  <div class="h5 text-primary mb-1"><%= classItem.total_students || 0 %></div>
                  <small class="text-muted">Students</small>
                </div>
                <div class="col-4">
                  <div class="h5 text-info mb-1"><%= classItem.total_days || 0 %></div>
                  <small class="text-muted">Days</small>
                </div>
                <div class="col-4">
                  <div class="h5 text-success mb-1"><%= classItem.total_present || 0 %></div>
                  <small class="text-muted">Present</small>
                </div>
              </div>

              <div class="progress mb-3" style="height: 8px;">
                <div class="progress-bar <%= (classItem.avg_attendance || 0) >= 80 ? 'bg-success' : (classItem.avg_attendance || 0) >= 60 ? 'bg-warning' : 'bg-danger' %>" 
                     style="width: <%= classItem.avg_attendance || 0 %>%"></div>
              </div>

              <div class="d-grid gap-2">
                <a href="/class/<%= classItem.id %>/insights" class="btn btn-primary btn-sm">
                  <i class="fas fa-chart-line me-2"></i>Detailed Insights
                </a>
                <div class="btn-group" role="group">
                  <a href="/class/<%= classItem.id %>/attendance" class="btn btn-outline-success btn-sm">
                    <i class="fas fa-check me-1"></i>Attendance
                  </a>
                  <a href="/reports/class/<%= classItem.id %>" class="btn btn-outline-info btn-sm">
                    <i class="fas fa-chart-bar me-1"></i>Reports
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>