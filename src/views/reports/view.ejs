<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> - Attendance Management System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; }
    .navbar { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .report-card { 
      background: white; 
      border-radius: 15px; 
      padding: 30px; 
      box-shadow: 0 5px 15px rgba(0,0,0,0.08); 
      margin-bottom: 20px;
    }
    .header-section {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 30px 0;
      margin-bottom: 30px;
    }
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }
    .stat-card {
      background: white;
      border-radius: 10px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 3px 10px rgba(0,0,0,0.08);
    }
    .stat-number {
      font-size: 2rem;
      font-weight: bold;
      margin-bottom: 5px;
    }
    .stat-label {
      color: #6c757d;
      font-size: 0.9rem;
    }
    .attendance-table {
      background: white;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 3px 10px rgba(0,0,0,0.08);
    }
    .status-present { background-color: #d4edda; color: #155724; }
    .status-absent { background-color: #f8d7da; color: #721c24; }
    .status-late { background-color: #fff3cd; color: #856404; }
    .status-excused { background-color: #d1ecf1; color: #0c5460; }
    @media print {
      .no-print { display: none !important; }
      body { background: white !important; }
      .report-card, .attendance-table { box-shadow: none !important; }
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark no-print">
    <div class="container-fluid">
      <a class="navbar-brand" href="/dashboard">
        <i class="fas fa-graduation-cap me-2"></i>Attendance MS
      </a>
      <div class="navbar-nav ms-auto">
        <div class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
            <i class="fas fa-user-circle me-1"></i><%= currentUser.name %>
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/profile"><i class="fas fa-user me-2"></i>My Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <form method="post" action="/logout" class="d-inline">
                <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <div class="header-section no-print">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h1 class="mb-2">
            <i class="fas fa-chart-bar me-3"></i>Attendance Report
          </h1>
          <p class="mb-0 opacity-90"><%= classInfo.name %><% if (classInfo.section) { %> - Section <%= classInfo.section %><% } %></p>
        </div>
        <div class="col-md-6 text-end">
          <button onclick="window.print()" class="btn btn-success me-2">
            <i class="fas fa-print me-2"></i>Print Report
          </button>
          <button onclick="downloadReport('csv')" class="btn btn-warning me-2">
            <i class="fas fa-file-csv me-2"></i>Download CSV
          </button>
          <a href="/reports" class="btn btn-light">
            <i class="fas fa-arrow-left me-2"></i>Back to Reports
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <!-- Report Header -->
    <div class="report-card">
      <div class="row align-items-center mb-4">
        <div class="col-md-8">
          <h3 class="mb-1"><%= classInfo.name %></h3>
          <p class="text-muted mb-2">
            <% if (classInfo.section) { %>Section <%= classInfo.section %> â€¢ <% } %>
            <%= new Date(dateRange.start).toLocaleDateString() %> to <%= new Date(dateRange.end).toLocaleDateString() %>
          </p>
          <div class="d-flex gap-3">
            <span class="badge bg-primary">
              <i class="fas fa-calendar me-1"></i><%= dateRange.type.replace('_', ' ').toUpperCase() %>
            </span>
            <% if (filters.status) { %>
              <span class="badge bg-info">
                <i class="fas fa-filter me-1"></i>Status: <%= filters.status %>
              </span>
            <% } %>
            <% if (filters.threshold) { %>
              <span class="badge bg-warning">
                <i class="fas fa-percentage me-1"></i>Threshold: <%= filters.threshold %>%
              </span>
            <% } %>
          </div>
        </div>
        <div class="col-md-4 text-end">
          <div class="badge bg-secondary fs-6 p-3">
            <i class="fas fa-calendar me-2"></i>
            Generated: <%= new Date().toLocaleDateString() %>
          </div>
        </div>
      </div>

      <!-- Summary Statistics -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-number text-primary"><%= summary.total_days %></div>
          <div class="stat-label">Total Days</div>
        </div>
        <div class="stat-card">
          <div class="stat-number text-info"><%= summary.total_students %></div>
          <div class="stat-label">Students</div>
        </div>
        <div class="stat-card">
          <div class="stat-number text-success"><%= summary.total_present %></div>
          <div class="stat-label">Present</div>
        </div>
        <div class="stat-card">
          <div class="stat-number text-danger"><%= summary.total_absent %></div>
          <div class="stat-label">Absent</div>
        </div>
        <div class="stat-card">
          <div class="stat-number text-warning"><%= summary.total_late %></div>
          <div class="stat-label">Late</div>
        </div>
        <div class="stat-card">
          <div class="stat-number text-secondary">
            <%= summary.total_present > 0 ? Math.round((summary.total_present / (summary.total_present + summary.total_absent + summary.total_late + summary.total_excused)) * 100) : 0 %>%
          </div>
          <div class="stat-label">Attendance Rate</div>
        </div>
      </div>
    </div>

    <!-- Attendance Data Table -->
    <div class="attendance-table">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-dark">
            <tr>
              <th>Date</th>
              <th>Roll No.</th>
              <th>Student Name</th>
              <th>Status</th>
              <th>Remarks</th>
            </tr>
          </thead>
          <tbody>
            <% if (reportData.length === 0) { %>
              <tr>
                <td colspan="5" class="text-center py-4 text-muted">
                  <i class="fas fa-inbox fa-2x mb-2"></i>
                  <div>No attendance records found for the selected criteria</div>
                </td>
              </tr>
            <% } else { %>
              <% reportData.forEach(record => { %>
                <tr>
                  <td><%= new Date(record.date).toLocaleDateString() %></td>
                  <td><%= record.roll_number || 'N/A' %></td>
                  <td>
                    <div class="d-flex align-items-center">
                      <i class="fas fa-user-circle text-muted me-2"></i>
                      <%= record.student_name %>
                    </div>
                  </td>
                  <td>
                    <span class="badge status-<%= record.status %>">
                      <% if (record.status === 'present') { %>
                        <i class="fas fa-check me-1"></i>Present
                      <% } else if (record.status === 'absent') { %>
                        <i class="fas fa-times me-1"></i>Absent
                      <% } else if (record.status === 'late') { %>
                        <i class="fas fa-clock me-1"></i>Late
                      <% } else if (record.status === 'excused') { %>
                        <i class="fas fa-user-check me-1"></i>Excused
                      <% } %>
                    </span>
                  </td>
                  <td>
                    <% if (record.remarks) { %>
                      <small class="text-muted"><%= record.remarks %></small>
                    <% } else { %>
                      <span class="text-muted">-</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Student Summary (if applicable) -->
    <% if (reportType === 'class' && reportData.length > 0) { %>
      <div class="report-card mt-4">
        <h5 class="mb-3">
          <i class="fas fa-users me-2"></i>Student Summary
        </h5>
        <div class="row">
          <% 
            // Group data by student
            const studentSummary = {};
            reportData.forEach(record => {
              if (!studentSummary[record.student_id]) {
                studentSummary[record.student_id] = {
                  name: record.student_name,
                  roll_number: record.roll_number,
                  present: 0,
                  absent: 0,
                  late: 0,
                  excused: 0,
                  total: 0
                };
              }
              studentSummary[record.student_id][record.status]++;
              studentSummary[record.student_id].total++;
            });
            
            Object.values(studentSummary).forEach(student => {
              const attendanceRate = Math.round((student.present / student.total) * 100);
          %>
            <div class="col-md-6 col-lg-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <h6 class="card-title">
                    <%= student.name %>
                    <small class="text-muted">(Roll: <%= student.roll_number || 'N/A' %>)</small>
                  </h6>
                  <div class="row text-center">
                    <div class="col-3">
                      <div class="small text-success fw-bold"><%= student.present %></div>
                      <div class="small text-muted">Present</div>
                    </div>
                    <div class="col-3">
                      <div class="small text-danger fw-bold"><%= student.absent %></div>
                      <div class="small text-muted">Absent</div>
                    </div>
                    <div class="col-3">
                      <div class="small text-warning fw-bold"><%= student.late %></div>
                      <div class="small text-muted">Late</div>
                    </div>
                    <div class="col-3">
                      <div class="small text-primary fw-bold"><%= attendanceRate %>%</div>
                      <div class="small text-muted">Rate</div>
                    </div>
                  </div>
                  <div class="progress mt-2" style="height: 4px;">
                    <div class="progress-bar <%= attendanceRate >= 80 ? 'bg-success' : attendanceRate >= 60 ? 'bg-warning' : 'bg-danger' %>" 
                         style="width: <%= attendanceRate %>%"></div>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>

    <!-- Report Footer -->
    <div class="report-card">
      <div class="row align-items-center">
        <div class="col-md-6">
          <small class="text-muted">
            <i class="fas fa-info-circle me-1"></i>
            Report generated on <%= new Date().toLocaleString() %> by <%= currentUser.name %>
          </small>
        </div>
        <div class="col-md-6 text-end">
          <small class="text-muted">
            <i class="fas fa-school me-1"></i>
            <%= process.env.SCHOOL_NAME || 'Government College Of Engineering Aurangabad' %>
          </small>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function downloadReport(format) {
      const params = new URLSearchParams(window.location.search);
      params.set('format', format);
      window.location.href = window.location.pathname + '?' + params.toString();
    }

    // Auto-print functionality (optional)
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('print') === 'true') {
      window.onload = function() {
        setTimeout(() => {
          window.print();
        }, 1000);
      };
    }
  </script>
</body>
</html>