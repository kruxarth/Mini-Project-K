<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %> - <%= brand %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
            --success-color: #27ae60;
            --warning-color: #f39c12;
            --danger-color: #e74c3c;
            --dark-bg: #1a1a1a;
            --card-bg: #2d2d2d;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background: rgba(44, 62, 80, 0.95) !important;
            backdrop-filter: blur(10px);
            border-bottom: 2px solid var(--secondary-color);
        }

        .container-main {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            margin: 20px auto;
            padding: 0;
            overflow: hidden;
        }

        .page-header {
            background: linear-gradient(135deg, var(--primary-color), #34495e);
            color: white;
            padding: 30px;
            text-align: center;
        }

        .page-header h1 {
            margin: 0;
            font-size: 2.5rem;
            font-weight: 700;
        }

        .page-header p {
            margin: 10px 0 0 0;
            opacity: 0.9;
            font-size: 1.1rem;
        }

        .content-section {
            padding: 30px;
        }

        .settings-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            overflow: hidden;
        }

        .settings-card-header {
            background: linear-gradient(135deg, var(--secondary-color), #2980b9);
            color: white;
            padding: 20px 30px;
            font-size: 1.3rem;
            font-weight: 600;
        }

        .settings-card-body {
            padding: 30px;
        }

        .form-switch {
            margin-bottom: 20px;
        }

        .form-switch .form-check-input {
            width: 3rem;
            height: 1.5rem;
        }

        .form-switch .form-check-input:checked {
            background-color: var(--success-color);
            border-color: var(--success-color);
        }

        .form-switch .form-check-label {
            font-weight: 500;
            margin-left: 10px;
        }

        .notification-status {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .status-sent {
            background: #d4edda;
            color: #155724;
        }

        .status-failed {
            background: #f8d7da;
            color: #721c24;
        }

        .status-pending {
            background: #fff3cd;
            color: #856404;
        }

        .notification-log {
            max-height: 400px;
            overflow-y: auto;
        }

        .notification-item {
            border-left: 4px solid #dee2e6;
            padding: 15px;
            margin-bottom: 10px;
            background: #f8f9fa;
            border-radius: 0 8px 8px 0;
            transition: all 0.3s ease;
        }

        .notification-item:hover {
            background: #e9ecef;
            transform: translateX(5px);
        }

        .notification-item.email {
            border-left-color: var(--secondary-color);
        }

        .notification-item.sms {
            border-left-color: var(--success-color);
        }

        .notification-item.failed {
            border-left-color: var(--danger-color);
        }

        .btn-test {
            background: linear-gradient(135deg, var(--warning-color), #e67e22);
            border: none;
            color: white;
            font-weight: 600;
            padding: 10px 20px;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

        .btn-test:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(243, 156, 18, 0.4);
            color: white;
        }

        .btn-save {
            background: linear-gradient(135deg, var(--success-color), #2ecc71);
            border: none;
            color: white;
            font-weight: 600;
            padding: 12px 30px;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(39, 174, 96, 0.4);
            color: white;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .stat-label {
            color: #6c757d;
            font-size: 0.9rem;
        }

        .alert-custom {
            border: none;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .alert-info-custom {
            background: linear-gradient(135deg, #e3f2fd, #bbdefb);
            color: #0d47a1;
        }

        .form-control, .form-select {
            border-radius: 10px;
            border: 2px solid #e9ecef;
            padding: 12px 15px;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--secondary-color);
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
        }

        .loading-spinner {
            display: none;
            width: 20px;
            height: 20px;
            border: 2px solid #f3f3f3;
            border-top: 2px solid var(--secondary-color);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-right: 10px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container-fluid">
        <div class="container-main">
            <!-- Page Header -->
            <div class="page-header">
                <h1><i class="fas fa-bell me-3"></i>Notification Center</h1>
                <p>Manage automated notifications for absences, low attendance, and reports</p>
            </div>

            <div class="content-section">
                <!-- Flash Messages -->
                <% if (typeof flash !== 'undefined' && flash && flash.message) { %>
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <%= flash.message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Statistics -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon text-primary">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="stat-number text-primary" id="emailCount">0</div>
                        <div class="stat-label">Emails Sent Today</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon text-success">
                            <i class="fas fa-sms"></i>
                        </div>
                        <div class="stat-number text-success" id="smsCount">0</div>
                        <div class="stat-label">SMS Sent Today</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon text-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="stat-number text-warning" id="alertCount">0</div>
                        <div class="stat-label">Alerts Sent This Week</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon text-info">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <div class="stat-number text-info">98%</div>
                        <div class="stat-label">Delivery Success Rate</div>
                    </div>
                </div>

                <!-- Notification Settings -->
                <div class="settings-card">
                    <div class="settings-card-header">
                        <i class="fas fa-cog me-2"></i>Notification Settings
                    </div>
                    <div class="settings-card-body">
                        <form id="notificationSettingsForm" method="POST" action="/notifications/settings">
                            <div class="row">
                                <!-- Channel Settings -->
                                <div class="col-md-6">
                                    <h5 class="mb-3"><i class="fas fa-broadcast-tower me-2"></i>Communication Channels</h5>
                                    
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="emailEnabled" name="email_enabled" 
                                               <%= settings.email_enabled ? 'checked' : '' %>>
                                        <label class="form-check-label" for="emailEnabled">
                                            <i class="fas fa-envelope me-2"></i>Email Notifications
                                        </label>
                                    </div>
                                    
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="smsEnabled" name="sms_enabled"
                                               <%= settings.sms_enabled ? 'checked' : '' %>>
                                        <label class="form-check-label" for="smsEnabled">
                                            <i class="fas fa-sms me-2"></i>SMS Notifications
                                        </label>
                                    </div>
                                </div>

                                <!-- Alert Types -->
                                <div class="col-md-6">
                                    <h5 class="mb-3"><i class="fas fa-bell me-2"></i>Alert Types</h5>
                                    
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="absenceAlerts" name="absence_alerts"
                                               <%= settings.absence_alerts ? 'checked' : '' %>>
                                        <label class="form-check-label" for="absenceAlerts">
                                            <i class="fas fa-user-times me-2"></i>Immediate Absence Alerts
                                        </label>
                                    </div>
                                    
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="lowAttendanceAlerts" name="low_attendance_alerts"
                                               <%= settings.low_attendance_alerts ? 'checked' : '' %>>
                                        <label class="form-check-label" for="lowAttendanceAlerts">
                                            <i class="fas fa-chart-line me-2"></i>Low Attendance Alerts
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div class="row">
                                <!-- Report Settings -->
                                <div class="col-md-6">
                                    <h5 class="mb-3"><i class="fas fa-file-alt me-2"></i>Automated Reports</h5>
                                    
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="weeklyReports" name="weekly_reports"
                                               <%= settings.weekly_reports ? 'checked' : '' %>>
                                        <label class="form-check-label" for="weeklyReports">
                                            <i class="fas fa-calendar-week me-2"></i>Weekly Reports
                                        </label>
                                    </div>
                                    
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="monthlyReports" name="monthly_reports"
                                               <%= settings.monthly_reports ? 'checked' : '' %>>
                                        <label class="form-check-label" for="monthlyReports">
                                            <i class="fas fa-calendar-alt me-2"></i>Monthly Reports
                                        </label>
                                    </div>
                                </div>

                                <!-- Thresholds and Timing -->
                                <div class="col-md-6">
                                    <h5 class="mb-3"><i class="fas fa-sliders-h me-2"></i>Thresholds & Timing</h5>
                                    
                                    <div class="mb-3">
                                        <label for="lowAttendanceThreshold" class="form-label">
                                            <i class="fas fa-percentage me-2"></i>Low Attendance Threshold
                                        </label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="lowAttendanceThreshold" 
                                                   name="low_attendance_threshold" min="0" max="100" 
                                                   value="<%= settings.low_attendance_threshold || 75 %>">
                                            <span class="input-group-text">%</span>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="reportDay" class="form-label">
                                            <i class="fas fa-calendar me-2"></i>Weekly Report Day
                                        </label>
                                        <select class="form-select" id="reportDay" name="report_day">
                                            <option value="monday" <%= settings.report_day === 'monday' ? 'selected' : '' %>>Monday</option>
                                            <option value="tuesday" <%= settings.report_day === 'tuesday' ? 'selected' : '' %>>Tuesday</option>
                                            <option value="wednesday" <%= settings.report_day === 'wednesday' ? 'selected' : '' %>>Wednesday</option>
                                            <option value="thursday" <%= settings.report_day === 'thursday' ? 'selected' : '' %>>Thursday</option>
                                            <option value="friday" <%= settings.report_day === 'friday' || !settings.report_day ? 'selected' : '' %>>Friday</option>
                                            <option value="saturday" <%= settings.report_day === 'saturday' ? 'selected' : '' %>>Saturday</option>
                                            <option value="sunday" <%= settings.report_day === 'sunday' ? 'selected' : '' %>>Sunday</option>
                                        </select>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="reportTime" class="form-label">
                                            <i class="fas fa-clock me-2"></i>Report Time
                                        </label>
                                        <input type="time" class="form-control" id="reportTime" name="report_time" 
                                               value="<%= settings.report_time || '17:00' %>">
                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-save">
                                    <i class="fas fa-save me-2"></i>Save Settings
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="settings-card">
                    <div class="settings-card-header">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </div>
                    <div class="settings-card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <button class="btn btn-test w-100" onclick="sendTestNotification('absence')">
                                    <div class="loading-spinner" id="absenceSpinner"></div>
                                    <i class="fas fa-user-times me-2"></i>Test Absence Alert
                                </button>
                            </div>
                            <div class="col-md-4 mb-3">
                                <button class="btn btn-test w-100" onclick="sendTestNotification('low_attendance')">
                                    <div class="loading-spinner" id="lowAttendanceSpinner"></div>
                                    <i class="fas fa-chart-line me-2"></i>Send Low Attendance Alerts
                                </button>
                            </div>
                            <div class="col-md-4 mb-3">
                                <button class="btn btn-test w-100" onclick="sendTestNotification('weekly_report')">
                                    <div class="loading-spinner" id="weeklyReportSpinner"></div>
                                    <i class="fas fa-file-alt me-2"></i>Send Weekly Reports
                                </button>
                            </div>
                        </div>
                        
                        <div class="alert alert-info-custom">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Test Notifications:</strong> Use these buttons to test your notification settings. 
                            Test messages will be sent to guardians with valid contact information.
                        </div>
                    </div>
                </div>

                <!-- Recent Notifications -->
                <div class="settings-card">
                    <div class="settings-card-header">
                        <i class="fas fa-history me-2"></i>Recent Notifications
                    </div>
                    <div class="settings-card-body">
                        <div class="notification-log">
                            <% if (recentNotifications && recentNotifications.length > 0) { %>
                                <% recentNotifications.forEach(notification => { %>
                                    <div class="notification-item <%= notification.channel %> <%= notification.status === 'failed' ? 'failed' : '' %>">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <div class="fw-bold">
                                                    <i class="fas fa-<%= notification.channel === 'email' ? 'envelope' : 'sms' %> me-2"></i>
                                                    <%= notification.student_name || 'System Notification' %>
                                                    <% if (notification.class_name) { %>
                                                        - <%= notification.class_name %> <%= notification.section %>
                                                    <% } %>
                                                </div>
                                                <div class="text-muted small">
                                                    Type: <%= notification.notification_type || 'attendance' %> â€¢ 
                                                    Channel: <%= notification.channel.toUpperCase() %>
                                                    <% if (notification.error) { %>
                                                        <br><span class="text-danger">Error: <%= notification.error %></span>
                                                    <% } %>
                                                </div>
                                            </div>
                                            <div class="text-end">
                                                <span class="notification-status status-<%= notification.status %>">
                                                    <%= notification.status %>
                                                </span>
                                                <div class="text-muted small mt-1">
                                                    <%= new Date(notification.sent_at).toLocaleString() %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p>No notifications sent yet. Configure your settings and start sending notifications!</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Update statistics on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateNotificationStats();
        });

        // Send test notifications
        async function sendTestNotification(type) {
            const spinner = document.getElementById(type === 'absence' ? 'absenceSpinner' : 
                                                 type === 'low_attendance' ? 'lowAttendanceSpinner' : 'weeklyReportSpinner');
            
            spinner.style.display = 'inline-block';
            
            try {
                let endpoint;
                let payload = {};
                
                switch(type) {
                    case 'absence':
                        // For testing, we'll use today's date and first available class
                        endpoint = '/notifications/send-absence';
                        payload = {
                            classId: 1, // You might want to make this dynamic
                            date: new Date().toISOString().slice(0, 10)
                        };
                        break;
                    case 'low_attendance':
                        endpoint = '/notifications/send-low-attendance';
                        break;
                    case 'weekly_report':
                        endpoint = '/notifications/send-reports';
                        payload = { reportType: 'weekly' };
                        break;
                }
                
                const response = await fetch(endpoint, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(payload)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showAlert(`Success! Sent ${result.emailsSent || 0} emails and ${result.smsSent || 0} SMS messages.`, 'success');
                    updateNotificationStats();
                    setTimeout(() => location.reload(), 2000);
                } else {
                    showAlert(result.message || 'Failed to send notifications', 'danger');
                }
                
            } catch (error) {
                console.error('Error sending test notification:', error);
                showAlert('Error sending notification. Please try again.', 'danger');
            } finally {
                spinner.style.display = 'none';
            }
        }

        // Update notification statistics
        async function updateNotificationStats() {
            try {
                // This would typically fetch from an API endpoint
                // For now, we'll use the existing data from the page
                const notifications = <%= JSON.stringify(recentNotifications || []) %>;
                
                const today = new Date().toDateString();
                const thisWeek = new Date(Date.now() - 7 * 24 * 60 * 60 * 1000);
                
                let emailsToday = 0;
                let smsToday = 0;
                let alertsThisWeek = 0;
                
                notifications.forEach(notification => {
                    const notificationDate = new Date(notification.sent_at);
                    
                    if (notificationDate.toDateString() === today) {
                        if (notification.channel === 'email') emailsToday++;
                        if (notification.channel === 'sms') smsToday++;
                    }
                    
                    if (notificationDate >= thisWeek) {
                        alertsThisWeek++;
                    }
                });
                
                document.getElementById('emailCount').textContent = emailsToday;
                document.getElementById('smsCount').textContent = smsToday;
                document.getElementById('alertCount').textContent = alertsThisWeek;
                
            } catch (error) {
                console.error('Error updating stats:', error);
            }
        }

        // Show alert messages
        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            const container = document.querySelector('.content-section');
            container.insertBefore(alertDiv, container.firstChild);
            
            // Auto-dismiss after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 5000);
        }

        // Form validation
        document.getElementById('notificationSettingsForm').addEventListener('submit', function(e) {
            const threshold = document.getElementById('lowAttendanceThreshold').value;
            
            if (threshold < 0 || threshold > 100) {
                e.preventDefault();
                showAlert('Low attendance threshold must be between 0 and 100.', 'danger');
                return false;
            }
            
            showAlert('Saving notification settings...', 'info');
        });

        // Real-time updates for switches
        document.querySelectorAll('.form-check-input').forEach(input => {
            input.addEventListener('change', function() {
                const label = this.nextElementSibling;
                if (this.checked) {
                    label.style.color = '#27ae60';
                    label.style.fontWeight = '600';
                } else {
                    label.style.color = '';
                    label.style.fontWeight = '';
                }
            });
        });

        // Initialize switch states
        document.querySelectorAll('.form-check-input:checked').forEach(input => {
            const label = input.nextElementSibling;
            label.style.color = '#27ae60';
            label.style.fontWeight = '600';
        });
    </script>
</body>
</html>