<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mark Attendance - <%= className %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-blue: #2563eb;
            --success-green: #059669;
            --warning-orange: #d97706;
            --danger-red: #dc2626;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-600: #4b5563;
            --gray-800: #1f2937;
            --gray-900: #111827;
        }

        body {
            background-color: var(--gray-50);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        /* Header */
        .attendance-header {
            background: white;
            border-bottom: 1px solid var(--gray-200);
            padding: 1.5rem 0;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .class-info h4 {
            margin: 0;
            color: var(--gray-900);
            font-weight: 600;
        }

        .class-meta {
            color: var(--gray-600);
            font-size: 0.875rem;
            margin: 0.25rem 0 0 0;
        }

        .attendance-actions {
            display: flex;
            gap: 0.75rem;
            align-items: center;
        }

        .quick-btn {
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            border: none;
            font-weight: 500;
            font-size: 0.875rem;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s;
        }

        .btn-save {
            background: var(--success-green);
            color: white;
        }

        .btn-save:hover {
            background: #047857;
            color: white;
        }

        .btn-secondary {
            background: var(--gray-100);
            color: var(--gray-700);
            border: 1px solid var(--gray-200);
        }

        .btn-secondary:hover {
            background: var(--gray-200);
            color: var(--gray-800);
        }

        /* Quick Stats */
        .quick-stats {
            background: white;
            border-radius: 0.75rem;
            border: 1px solid var(--gray-200);
            padding: 1.5rem;
            margin: 1.5rem 0;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 1rem;
        }

        .stat-item {
            text-align: center;
        }

        .stat-value {
            font-size: 1.75rem;
            font-weight: 700;
            margin: 0;
        }

        .stat-label {
            font-size: 0.75rem;
            color: var(--gray-600);
            margin: 0.25rem 0 0 0;
        }

        .stat-present { color: var(--success-green); }
        .stat-absent { color: var(--danger-red); }
        .stat-late { color: var(--warning-orange); }
        .stat-total { color: var(--gray-600); }

        /* Student Grid */
        .students-container {
            background: white;
            border-radius: 0.75rem;
            border: 1px solid var(--gray-200);
            overflow: hidden;
        }

        .students-header {
            background: var(--gray-50);
            padding: 1rem 1.5rem;
            border-bottom: 1px solid var(--gray-200);
            display: flex;
            align-items: center;
            justify-content: between;
        }

        .bulk-actions {
            display: flex;
            gap: 0.5rem;
        }

        .bulk-btn {
            padding: 0.25rem 0.75rem;
            border-radius: 0.375rem;
            border: 1px solid var(--gray-300);
            background: white;
            font-size: 0.75rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
        }

        .bulk-btn:hover {
            background: var(--gray-50);
        }

        .bulk-present { border-color: var(--success-green); color: var(--success-green); }
        .bulk-absent { border-color: var(--danger-red); color: var(--danger-red); }
        .bulk-late { border-color: var(--warning-orange); color: var(--warning-orange); }

        .students-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 0;
        }

        .student-card {
            border-bottom: 1px solid var(--gray-200);
            border-right: 1px solid var(--gray-200);
            padding: 1rem;
            transition: all 0.2s;
            cursor: pointer;
        }

        .student-card:hover {
            background: var(--gray-50);
        }

        .student-card.selected {
            background: #eff6ff;
            border-color: var(--primary-blue);
        }

        .student-info {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
        }

        .student-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--gray-200);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: var(--gray-600);
        }

        .student-details h6 {
            margin: 0;
            font-weight: 600;
            color: var(--gray-900);
        }

        .student-details p {
            margin: 0;
            font-size: 0.75rem;
            color: var(--gray-600);
        }

        .attendance-options {
            display: flex;
            gap: 0.5rem;
        }

        .attendance-btn {
            flex: 1;
            padding: 0.5rem;
            border: 2px solid var(--gray-200);
            border-radius: 0.5rem;
            background: white;
            font-size: 0.75rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.25rem;
        }

        .attendance-btn:hover {
            border-color: var(--gray-300);
        }

        .attendance-btn.active {
            color: white;
            font-weight: 600;
        }

        .btn-present.active {
            background: var(--success-green);
            border-color: var(--success-green);
        }

        .btn-absent.active {
            background: var(--danger-red);
            border-color: var(--danger-red);
        }

        .btn-late.active {
            background: var(--warning-orange);
            border-color: var(--warning-orange);
        }

        /* Notes */
        .notes-input {
            width: 100%;
            border: 1px solid var(--gray-200);
            border-radius: 0.375rem;
            padding: 0.5rem;
            font-size: 0.75rem;
            margin-top: 0.5rem;
            display: none;
        }

        .notes-input.show {
            display: block;
        }

        /* Search and Filter */
        .search-filter {
            background: white;
            border-radius: 0.75rem;
            border: 1px solid var(--gray-200);
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .search-input {
            border: 1px solid var(--gray-200);
            border-radius: 0.5rem;
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
            width: 100%;
        }

        .search-input:focus {
            outline: none;
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

        /* Keyboard Shortcuts */
        .shortcuts-help {
            position: fixed;
            bottom: 1rem;
            right: 1rem;
            background: var(--gray-900);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            font-size: 0.75rem;
            opacity: 0.8;
            z-index: 1000;
        }

        /* Loading States */
        .saving {
            opacity: 0.6;
            pointer-events: none;
        }

        /* Mobile Responsive */
        @media (max-width: 768px) {
            .students-grid {
                grid-template-columns: 1fr;
            }
            
            .attendance-actions {
                flex-direction: column;
                align-items: stretch;
            }
            
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        /* Animation */
        .student-card {
            animation: fadeIn 0.3s ease-in-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Low attendance highlight */
        .low-attendance {
            border-left: 4px solid var(--danger-red);
        }

        .low-attendance .student-avatar {
            background: #fee2e2;
            color: var(--danger-red);
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="attendance-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="class-info">
                        <h4><%= className %> - <%= section %></h4>
                        <p class="class-meta">
                            <%= subject %> • <%= students.length %> students • 
                            <%= new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                        </p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="attendance-actions">
                        <button type="button" class="quick-btn btn-save" onclick="saveAttendance()">
                            <i class="fas fa-save"></i>
                            Save Attendance
                        </button>
                        <button type="button" class="quick-btn btn-secondary" onclick="autofillYesterday()">
                            <i class="fas fa-history"></i>
                            Copy Yesterday
                        </button>
                        <a href="/teacher-dashboard" class="quick-btn btn-secondary">
                            <i class="fas fa-arrow-left"></i>
                            Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid mt-3">
        <!-- Flash Messages -->
        <% if (typeof flash !== 'undefined' && flash && flash.message) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= flash.message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Quick Stats -->
        <div class="quick-stats">
            <div class="stats-grid">
                <div class="stat-item">
                    <p class="stat-value stat-present" id="presentCount">0</p>
                    <p class="stat-label">Present</p>
                </div>
                <div class="stat-item">
                    <p class="stat-value stat-absent" id="absentCount">0</p>
                    <p class="stat-label">Absent</p>
                </div>
                <div class="stat-item">
                    <p class="stat-value stat-late" id="lateCount">0</p>
                    <p class="stat-label">Late</p>
                </div>
                <div class="stat-item">
                    <p class="stat-value stat-total" id="totalCount"><%= students.length %></p>
                    <p class="stat-label">Total</p>
                </div>
                <div class="stat-item">
                    <p class="stat-value" id="attendanceRate">0%</p>
                    <p class="stat-label">Rate</p>
                </div>
            </div>
        </div>

        <!-- Search and Bulk Actions -->
        <div class="search-filter">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <input type="text" class="search-input" id="searchInput" placeholder="Search students by name or roll number..." onkeyup="filterStudents()">
                </div>
                <div class="col-md-6">
                    <div class="bulk-actions">
                        <span style="font-size: 0.875rem; color: var(--gray-600); margin-right: 0.5rem;">Mark All:</span>
                        <button class="bulk-btn bulk-present" onclick="markAllAs('present')">
                            <i class="fas fa-check"></i> Present
                        </button>
                        <button class="bulk-btn bulk-absent" onclick="markAllAs('absent')">
                            <i class="fas fa-times"></i> Absent
                        </button>
                        <button class="bulk-btn bulk-late" onclick="markAllAs('late')">
                            <i class="fas fa-clock"></i> Late
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Students Grid -->
        <div class="students-container">
            <div class="students-header">
                <h5 style="margin: 0; color: var(--gray-900);">Students</h5>
                <div style="font-size: 0.875rem; color: var(--gray-600);">
                    Click on students or use keyboard shortcuts: P (Present), A (Absent), L (Late)
                </div>
            </div>
            
            <form id="attendanceForm" method="POST">
                <input type="hidden" name="date" value="<%= today %>">
                
                <div class="students-grid" id="studentsGrid">
                    <% students.forEach((student, index) => { %>
                        <div class="student-card <%= student.lowAttendance ? 'low-attendance' : '' %>" 
                             data-student-id="<%= student.id %>" 
                             data-student-name="<%= student.name.toLowerCase() %>"
                             data-roll-number="<%= student.roll_number %>"
                             onclick="selectStudent(<%= index %>)">
                            
                            <div class="student-info">
                                <div class="student-avatar">
                                    <%= student.name.charAt(0).toUpperCase() %>
                                </div>
                                <div class="student-details">
                                    <h6><%= student.name %></h6>
                                    <p>Roll: <%= student.roll_number %>
                                        <% if (student.lowAttendance) { %>
                                            <span style="color: var(--danger-red); font-weight: 600;">• Low Attendance</span>
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                            
                            <div class="attendance-options">
                                <button type="button" class="attendance-btn btn-present" 
                                        onclick="markAttendance(<%= index %>, 'present', event)"
                                        data-status="present">
                                    <i class="fas fa-check"></i>
                                    Present
                                </button>
                                <button type="button" class="attendance-btn btn-absent" 
                                        onclick="markAttendance(<%= index %>, 'absent', event)"
                                        data-status="absent">
                                    <i class="fas fa-times"></i>
                                    Absent
                                </button>
                                <button type="button" class="attendance-btn btn-late" 
                                        onclick="markAttendance(<%= index %>, 'late', event)"
                                        data-status="late">
                                    <i class="fas fa-clock"></i>
                                    Late
                                </button>
                            </div>
                            
                            <input type="hidden" name="attendance[<%= student.id %>]" value="<%= student.currentStatus || '' %>">
                            
                            <textarea class="notes-input" 
                                      name="notes[<%= student.id %>]" 
                                      placeholder="Add a note (optional)..."
                                      rows="2"><%= student.currentNote || '' %></textarea>
                        </div>
                    <% }); %>
                </div>
            </form>
        </div>
    </div>

    <!-- Keyboard Shortcuts Help -->
    <div class="shortcuts-help">
        <strong>Shortcuts:</strong> P=Present, A=Absent, L=Late, ↑↓=Navigate, Enter=Select, Ctrl+S=Save
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let selectedStudentIndex = 0;
        let students = <%- JSON.stringify(students) %>;
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateStats();
            selectStudent(0);
            
            // Load yesterday's attendance for autofill
            loadYesterdayAttendance();
        });

        // Student selection
        function selectStudent(index) {
            // Remove previous selection
            document.querySelectorAll('.student-card').forEach(card => {
                card.classList.remove('selected');
            });
            
            // Select new student
            const cards = document.querySelectorAll('.student-card');
            if (cards[index]) {
                cards[index].classList.add('selected');
                selectedStudentIndex = index;
                
                // Scroll into view
                cards[index].scrollIntoView({ 
                    behavior: 'smooth', 
                    block: 'center' 
                });
            }
        }

        // Mark attendance
        function markAttendance(index, status, event) {
            if (event) {
                event.stopPropagation();
            }
            
            const card = document.querySelectorAll('.student-card')[index];
            const hiddenInput = card.querySelector('input[type="hidden"]');
            const buttons = card.querySelectorAll('.attendance-btn');
            const notesInput = card.querySelector('.notes-input');
            
            // Update hidden input
            hiddenInput.value = status;
            
            // Update button states
            buttons.forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.status === status) {
                    btn.classList.add('active');
                }
            });
            
            // Show/hide notes for absent students
            if (status === 'absent') {
                notesInput.classList.add('show');
            } else {
                notesInput.classList.remove('show');
            }
            
            // Update stats
            updateStats();
            
            // Auto-advance to next student
            if (index < students.length - 1) {
                setTimeout(() => selectStudent(index + 1), 200);
            }
        }

        // Bulk actions
        function markAllAs(status) {
            students.forEach((student, index) => {
                markAttendance(index, status);
            });
        }

        // Update statistics
        function updateStats() {
            const inputs = document.querySelectorAll('input[name^="attendance"]');
            let present = 0, absent = 0, late = 0;
            
            inputs.forEach(input => {
                switch(input.value) {
                    case 'present': present++; break;
                    case 'absent': absent++; break;
                    case 'late': late++; break;
                }
            });
            
            const total = students.length;
            const marked = present + absent + late;
            const rate = total > 0 ? Math.round(((present + late) / total) * 100) : 0;
            
            document.getElementById('presentCount').textContent = present;
            document.getElementById('absentCount').textContent = absent;
            document.getElementById('lateCount').textContent = late;
            document.getElementById('attendanceRate').textContent = rate + '%';
        }

        // Search/filter students
        function filterStudents() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const cards = document.querySelectorAll('.student-card');
            
            cards.forEach(card => {
                const name = card.dataset.studentName;
                const rollNumber = card.dataset.rollNumber;
                
                if (name.includes(searchTerm) || rollNumber.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        // Autofill from yesterday
        async function autofillYesterday() {
            try {
                const yesterday = new Date();
                yesterday.setDate(yesterday.getDate() - 1);
                const dateStr = yesterday.toISOString().slice(0, 10);
                
                const response = await fetch(`/api/attendance-history?classId=<%= classId %>&date=${dateStr}`);
                const data = await response.json();
                
                if (data.success && data.attendance.length > 0) {
                    data.attendance.forEach(record => {
                        const studentIndex = students.findIndex(s => s.id === record.student_id);
                        if (studentIndex !== -1) {
                            markAttendance(studentIndex, record.status);
                        }
                    });
                    
                    showMessage('Yesterday\'s attendance copied successfully!', 'success');
                } else {
                    showMessage('No attendance data found for yesterday', 'info');
                }
            } catch (error) {
                console.error('Error loading yesterday\'s attendance:', error);
                showMessage('Error loading yesterday\'s attendance', 'error');
            }
        }

        // Load yesterday's attendance for reference
        async function loadYesterdayAttendance() {
            // This runs in background to show reference data
            // Implementation similar to autofillYesterday but just for display
        }

        // Save attendance
        async function saveAttendance() {
            const form = document.getElementById('attendanceForm');
            const saveBtn = document.querySelector('.btn-save');
            
            // Show loading state
            saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
            saveBtn.disabled = true;
            
            try {
                const formData = new FormData(form);
                const response = await fetch(form.action || window.location.pathname, {
                    method: 'POST',
                    body: formData
                });
                
                if (response.ok) {
                    showMessage('Attendance saved successfully!', 'success');
                    
                    // Emit real-time update
                    if (typeof io !== 'undefined') {
                        // WebSocket update would go here
                    }
                    
                    // Redirect after short delay
                    setTimeout(() => {
                        window.location.href = '/teacher-dashboard';
                    }, 1500);
                } else {
                    throw new Error('Failed to save attendance');
                }
            } catch (error) {
                console.error('Error saving attendance:', error);
                showMessage('Error saving attendance. Please try again.', 'error');
            } finally {
                // Reset button
                saveBtn.innerHTML = '<i class="fas fa-save"></i> Save Attendance';
                saveBtn.disabled = false;
            }
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Ignore if typing in input/textarea
            if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') {
                return;
            }
            
            switch(e.key.toLowerCase()) {
                case 'p':
                    e.preventDefault();
                    markAttendance(selectedStudentIndex, 'present');
                    break;
                case 'a':
                    e.preventDefault();
                    markAttendance(selectedStudentIndex, 'absent');
                    break;
                case 'l':
                    e.preventDefault();
                    markAttendance(selectedStudentIndex, 'late');
                    break;
                case 'arrowup':
                    e.preventDefault();
                    if (selectedStudentIndex > 0) {
                        selectStudent(selectedStudentIndex - 1);
                    }
                    break;
                case 'arrowdown':
                    e.preventDefault();
                    if (selectedStudentIndex < students.length - 1) {
                        selectStudent(selectedStudentIndex + 1);
                    }
                    break;
                case 'enter':
                    e.preventDefault();
                    // Toggle through statuses
                    const currentCard = document.querySelectorAll('.student-card')[selectedStudentIndex];
                    const currentInput = currentCard.querySelector('input[type="hidden"]');
                    const currentStatus = currentInput.value;
                    
                    let nextStatus = 'present';
                    if (currentStatus === 'present') nextStatus = 'absent';
                    else if (currentStatus === 'absent') nextStatus = 'late';
                    
                    markAttendance(selectedStudentIndex, nextStatus);
                    break;
                case 's':
                    if (e.ctrlKey || e.metaKey) {
                        e.preventDefault();
                        saveAttendance();
                    }
                    break;
            }
        });

        // Show message
        function showMessage(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 
                              type === 'error' ? 'alert-danger' : 'alert-info';
            
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert ${alertClass} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            const container = document.querySelector('.container-fluid');
            container.insertBefore(alertDiv, container.firstChild);
            
            // Auto-dismiss after 3 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 3000);
        }
    </script>
</body>
</html>