<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> - Attendance Management System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; }
    .navbar { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .form-card { 
      background: white; 
      border-radius: 15px; 
      padding: 30px; 
      box-shadow: 0 5px 15px rgba(0,0,0,0.08); 
      margin-bottom: 20px;
    }
    .header-section {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 30px 0;
      margin-bottom: 30px;
    }
    .recipient-preview {
      background: #f8f9fa;
      border-radius: 8px;
      padding: 15px;
      margin-top: 15px;
      max-height: 200px;
      overflow-y: auto;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/dashboard">
        <i class="fas fa-graduation-cap me-2"></i>Attendance MS
      </a>
      <div class="navbar-nav ms-auto">
        <div class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
            <i class="fas fa-user-circle me-1"></i><%= currentUser.name %>
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/profile"><i class="fas fa-user me-2"></i>My Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <form method="post" action="/logout" class="d-inline">
                <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <div class="header-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h1 class="mb-2">
            <i class="fas fa-paper-plane me-3"></i>Send Custom Message
          </h1>
          <p class="mb-0 opacity-90">Send notifications to parents via SMS and Email</p>
        </div>
        <div class="col-md-4 text-end">
          <a href="/notifications" class="btn btn-light">
            <i class="fas fa-arrow-left me-2"></i>Back to Notifications
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <% if (flash) { %>
      <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="fas fa-info-circle me-2"></i><%= flash.message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <div class="row">
      <div class="col-lg-8">
        <div class="form-card">
          <form method="post" action="/notifications/send-message" id="messageForm">
            <div class="mb-4">
              <label for="subject" class="form-label">
                <i class="fas fa-heading me-2"></i>Subject
              </label>
              <input type="text" class="form-control" id="subject" name="subject" required
                     placeholder="Enter message subject">
            </div>

            <div class="mb-4">
              <label for="message" class="form-label">
                <i class="fas fa-comment me-2"></i>Message
              </label>
              <textarea class="form-control" id="message" name="message" rows="6" required
                        placeholder="Enter your message here..."></textarea>
              <div class="form-text">
                <span id="charCount">0</span>/500 characters
              </div>
            </div>

            <div class="row mb-4">
              <div class="col-md-6">
                <label for="recipients_type" class="form-label">
                  <i class="fas fa-users me-2"></i>Send To
                </label>
                <select class="form-select" id="recipients_type" name="recipients_type" required>
                  <option value="">Select recipients</option>
                  <option value="all">All Students' Parents</option>
                  <option value="class">Specific Class</option>
                </select>
              </div>
              
              <div class="col-md-6" id="classSelectDiv" style="display: none;">
                <label for="class_id" class="form-label">
                  <i class="fas fa-chalkboard me-2"></i>Select Class
                </label>
                <select class="form-select" id="class_id" name="class_id">
                  <option value="">Choose class</option>
                  <% classes.forEach(classItem => { %>
                    <option value="<%= classItem.id %>">
                      <%= classItem.name %><% if (classItem.section) { %> - Section <%= classItem.section %><% } %>
                      (<%= classItem.student_count %> students)
                    </option>
                  <% }) %>
                </select>
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label">
                <i class="fas fa-share me-2"></i>Message Type
              </label>
              <div class="row">
                <div class="col-md-4">
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="message_type" id="both" value="both" checked>
                    <label class="form-check-label" for="both">
                      <i class="fas fa-envelope me-1"></i><i class="fas fa-sms me-1"></i> Both SMS & Email
                    </label>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="message_type" id="email_only" value="email">
                    <label class="form-check-label" for="email_only">
                      <i class="fas fa-envelope me-1"></i> Email Only
                    </label>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="message_type" id="sms_only" value="sms">
                    <label class="form-check-label" for="sms_only">
                      <i class="fas fa-sms me-1"></i> SMS Only
                    </label>
                  </div>
                </div>
              </div>
            </div>

            <div class="recipient-preview" id="recipientPreview" style="display: none;">
              <h6><i class="fas fa-eye me-2"></i>Recipients Preview</h6>
              <div id="recipientList"></div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <button type="button" class="btn btn-outline-secondary me-md-2" onclick="previewRecipients()">
                <i class="fas fa-eye me-2"></i>Preview Recipients
              </button>
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-paper-plane me-2"></i>Send Message
              </button>
            </div>
          </form>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="form-card">
          <h5 class="mb-3">
            <i class="fas fa-info-circle me-2"></i>Message Guidelines
          </h5>
          <ul class="list-unstyled">
            <li class="mb-2">
              <i class="fas fa-check text-success me-2"></i>
              Keep messages clear and concise
            </li>
            <li class="mb-2">
              <i class="fas fa-check text-success me-2"></i>
              Include student name when relevant
            </li>
            <li class="mb-2">
              <i class="fas fa-check text-success me-2"></i>
              SMS messages should be under 160 characters
            </li>
            <li class="mb-2">
              <i class="fas fa-check text-success me-2"></i>
              Use professional language
            </li>
            <li class="mb-2">
              <i class="fas fa-check text-success me-2"></i>
              Include contact information if needed
            </li>
          </ul>

          <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Note:</strong> Only parents with valid contact information will receive messages.
          </div>
        </div>

        <div class="form-card">
          <h5 class="mb-3">
            <i class="fas fa-chart-bar me-2"></i>Your Classes
          </h5>
          <% if (classes.length === 0) { %>
            <p class="text-muted">No classes found</p>
          <% } else { %>
            <% classes.forEach(classItem => { %>
              <div class="d-flex justify-content-between align-items-center mb-2">
                <div>
                  <strong><%= classItem.name %></strong>
                  <% if (classItem.section) { %>
                    <small class="text-muted">- Section <%= classItem.section %></small>
                  <% } %>
                </div>
                <span class="badge bg-primary"><%= classItem.student_count %> students</span>
              </div>
            <% }) %>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Character counter
    document.getElementById('message').addEventListener('input', function() {
      const charCount = this.value.length;
      document.getElementById('charCount').textContent = charCount;
      
      if (charCount > 500) {
        this.classList.add('is-invalid');
      } else {
        this.classList.remove('is-invalid');
      }
    });

    // Show/hide class selection
    document.getElementById('recipients_type').addEventListener('change', function() {
      const classSelectDiv = document.getElementById('classSelectDiv');
      const classSelect = document.getElementById('class_id');
      
      if (this.value === 'class') {
        classSelectDiv.style.display = 'block';
        classSelect.required = true;
      } else {
        classSelectDiv.style.display = 'none';
        classSelect.required = false;
        classSelect.value = '';
      }
      
      // Hide preview when changing recipients
      document.getElementById('recipientPreview').style.display = 'none';
    });

    // Preview recipients
    async function previewRecipients() {
      const recipientsType = document.getElementById('recipients_type').value;
      const classId = document.getElementById('class_id').value;
      
      if (!recipientsType) {
        alert('Please select recipients first');
        return;
      }
      
      if (recipientsType === 'class' && !classId) {
        alert('Please select a class');
        return;
      }
      
      try {
        let students = [];
        
        if (recipientsType === 'class') {
          const response = await fetch(`/api/class/${classId}/students`);
          students = await response.json();
        } else {
          // For 'all', we'd need another endpoint, but for now show a message
          document.getElementById('recipientList').innerHTML = 
            '<p class="text-info">All students\' parents will receive this message</p>';
          document.getElementById('recipientPreview').style.display = 'block';
          return;
        }
        
        const recipientList = document.getElementById('recipientList');
        const validRecipients = students.filter(s => s.parent_email || s.parent_phone);
        
        if (validRecipients.length === 0) {
          recipientList.innerHTML = '<p class="text-warning">No students with parent contact information found</p>';
        } else {
          recipientList.innerHTML = validRecipients.map(student => `
            <div class="d-flex justify-content-between align-items-center mb-1">
              <span>${student.name}</span>
              <small class="text-muted">
                ${student.parent_email ? 'ðŸ“§' : ''} ${student.parent_phone ? 'ðŸ“±' : ''}
              </small>
            </div>
          `).join('');
        }
        
        document.getElementById('recipientPreview').style.display = 'block';
      } catch (error) {
        alert('Error loading recipients: ' + error.message);
      }
    }

    // Form validation
    document.getElementById('messageForm').addEventListener('submit', function(e) {
      const message = document.getElementById('message').value;
      if (message.length > 500) {
        e.preventDefault();
        alert('Message is too long. Please keep it under 500 characters.');
        return;
      }
      
      const recipientsType = document.getElementById('recipients_type').value;
      if (recipientsType === 'class' && !document.getElementById('class_id').value) {
        e.preventDefault();
        alert('Please select a class');
        return;
      }
      
      // Confirm before sending
      if (!confirm('Are you sure you want to send this message?')) {
        e.preventDefault();
      }
    });
  </script>
</body>
</html>