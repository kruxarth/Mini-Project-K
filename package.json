{
  "name": "attendancems",
  "version": "1.0.0",
  "description": "A web based attendance management system built with Node.js and SQLite",
  "private": true,
  "type": "module",
  "main": "api/index.js",
  "scripts": {
    "setup": "node setup.js",
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "start:prod": "NODE_ENV=production node --enable-source-maps src/app.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "db:init": "node src/db.js init",
    "db:seed": "node src/db.js seed",
    "db:reset": "rm -rf data/*.db && npm run db:init && npm run db:seed",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "test": "echo \"Tests coming soon\" && exit 0",
    "test:watch": "echo \"Test watch mode coming soon\" && exit 0",
    "docker:build": "docker build -t attendancems .",
    "docker:run": "docker run -p 3000:3000 attendancems",
    "docker:compose": "docker-compose up -d",
    "security:audit": "npm audit --audit-level=moderate",
    "vercel-build": "echo 'Build complete'"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-sqlite3": "^0.9.15",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.15",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "twilio": "^4.21.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "keywords": [
    "attendance",
    "management",
    "system",
    "nodejs",
    "express",
    "sqlite",
    "education"
  ],
  "author": "Mayuri Futane <mjsfutane21@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mayuri2428/Mini-Project.git"
  },
  "bugs": {
    "url": "https://github.com/Mayuri2428/Mini-Project/issues"
  },
  "homepage": "https://github.com/Mayuri2428/Mini-Project#readme"
}